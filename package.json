{
  "name": "@seitbekir/project-lint",
  "version": "0.0.2",
  "type": "module",
  "keywords": [
    "project-lint",
    "structure-lint",
    "lint",
    "project-structure",
    "structure-quality"
  ],
  "description": "A CLI tool to lint project structure",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "clean": "rm -rf ./lib",
    "schema": "NODE_NO_WARNINGS=1 ts-json-schema-generator --path ./src/types/config.ts --type ProjectLintConfig > projectlintrc.schema.json",
    "start": "node lib/cli.js \"./**/*\"",
    "dev": "tsx src/cli.ts \"./**/*\"",
    "prepack": "npm run build && npm run schema",
    "test": "jest",
    "test.ci": "jest --ci --maxWorkers=7 --silent --coverage --reporters=default --reporters=jest-junit",
    "test.cov": "jest --coverage --testFailureExitCode=0",
    "ci.prettier": "prettier",
    "ci.eslint": "eslint",
    "ci.typecheck": "tsc --noEmit",
    "ci.project-lint": "project-lint",
    "ci.lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "main": "./lib/cli.js",
  "module": "./lib/index.js",
  "types": "./lib/cli.d.ts",
  "files": [
    "extends/**",
    "lib/**/*",
    "projectlintrc.schema.json",
    "src/**/*"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/cli.d.ts",
      "import": "./lib/cli.js",
      "default": "./lib/cli.js"
    }
  },
  "bin": {
    "project-lint": "./lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seitbekir/project-lint.git"
  },
  "author": "Seitbekir Seidametov",
  "license": "MIT",
  "engines": {
    "node": ">=18.12.0"
  },
  "dependencies": {
    "commander": "12.0.0",
    "es-main": "1.3.0",
    "globby": "14.0.1",
    "yaml": "2.4.1"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@typescript-eslint/parser": "7.7.1",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.2.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-security": "3.0.0",
    "eslint-plugin-security-node": "1.1.4",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "ts-json-schema-generator": "2.1.1",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.8",
    "tsx": "4.7.3",
    "typescript": "5.4.5"
  }
}
