{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": false,
    "outDir": "lib",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
